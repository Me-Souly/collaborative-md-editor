{
  "name": "note-editor",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "concurrently -n server,client -c blue,green \"npm run dev --prefix server\" \"npm start --prefix client\""
  },
  "lint-staged": {
    "client/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --config client/eslint.config.js",
      "prettier --write"
    ],
    "server/**/*.js": [
      "eslint --fix --config server/eslint.config.js",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  }
}
